generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Emplacement {
  id String @id @default(uuid())
  title String
  description String
  parentId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  parent Emplacement? @relation("EmplacementToEmplacement", fields: [parentId], references: [id])
  children Emplacement[] @relation("EmplacementToEmplacement")
  items Item[]
}

// model Object, id string default uuid, title string, description string, emplacementId string, emplacement Emplacement, emplacement mandatory, tags string list, metadata Metadata list
model Item {
  id String @id @default(uuid())
  title String
  description String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tags String[]
  emplacementId String
  emplacement Emplacement @relation(fields: [emplacementId], references: [id])
  metadata Metadata[] @relation("ItemToMetadata")
}